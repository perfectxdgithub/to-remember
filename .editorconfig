# 主要解决在不同编辑器上维护一致编码风格的问题，解决eslint不能解决的一些格式问题，如编辑器缩进等。
# 表示是最顶层的Editorconfig配置文件
root = true
[*] # 表示所有文件适用
charset = utf-8
indent_style = space  # 缩进风格 tab | space
indent_size = 2 # 缩进大小
end_of_line = lf  # 换行类型 lf | cr | crlf
trim_trailing_whitespace = true # 去除首行任意空白
insert_final_newLine = true # 始终在文件末尾插入空行

[*.md]  # 仅对md文件用以下规则
max_line_length = off
trim_trailing_whitespace = false